class Solution {
    public int[] nextGreaterElements(int[] nums) {
        int n = nums.length;
        int[] res = new int[n];
        Arrays.fill(res, -1);  
        Stack<Integer> stack = new Stack<>(); // store indices

        for(int i=0; i < 2*n; i++){
            int num = nums[i%n];
            // While stack is not empty and current number is greater than the top element
            while(!stack.isEmpty() && nums[stack.peek()] < num){
                int idx = stack.pop();
                res[idx] = num;
            }
            // push in stack only during first iteration
            if(i < n){
                stack.push(i);
            }
        }
        return res;
    }
}
