class Solution {
    public int minCostClimbingStairs(int[] cost) {
        return Math.min(dfs(cost, 0), dfs(cost, 1));
    }

    private int dfs(int[] nums, int i){
        if(i >= nums.length){
            return 0;
        }
        return nums[i] + Math.min(dfs(nums, i+1), dfs(nums, i+2));
    }
}


